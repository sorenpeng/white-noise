{
  "name": "white-noise-workspace",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": ["white-noise-demo"],
  "scripts": {
    "lint": "biome lint white-noise-demo",
    "format": "biome format --write white-noise-demo",
    "build": "bun run build:white-noise-demo",
    "build:white-noise-demo": "cd white-noise-demo && bun run build",
    "dev:white-noise-demo": "cd white-noise-demo && bun run dev",
    "update:deps": "cd white-noise-demo && bun update"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4"
  }
}
